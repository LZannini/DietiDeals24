<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="794dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_text" />
        
        <ImageView
            android:id="@+id/button_notifica"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/notifica" />

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="214dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/button_crea"
                android:layout_width="143dp"
                android:layout_height="173dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/create_deal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="Crea Asta"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_cerca"
                android:layout_width="143dp"
                android:layout_height="173dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search_deal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Cerca Asta"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="214dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/button_profilo"
                android:layout_width="143dp"
                android:layout_height="173dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="Profilo"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_disconnetti"
                android:layout_width="143dp"
                android:layout_height="173dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/disconnect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Disconnetti"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>