<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="8dp"
    android:background="@drawable/dialog_background"
    android:padding="6dp"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/foto_asta_image"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="1"
        android:src="@drawable/logo_text" />

    <TextView
        android:id="@+id/text_descrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:hint="Presenta una nuova offerta"
        android:textColorHint="#0E4273"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextOfferAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci importo"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancelOffer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="Annulla"
            android:textColor="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSubmitOffer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Invia"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
