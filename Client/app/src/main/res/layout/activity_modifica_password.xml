<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/page_background"
    tools:context=".ModificaPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_text" />

        <TextView
            android:id="@+id/text_vecchiaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password attuale"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/vecchia_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/info_container"
            android:gravity="center_vertical"
            android:textColor="#88000000"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/text_nuovaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nuova password"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nuova_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/info_container"
            android:gravity="center_vertical"
            android:textColor="#88000000"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/text_confermaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Conferma password"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/conferma_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/info_container"
            android:gravity="center_vertical"
            android:textColor="#88000000"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/salva_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/text_container"
            android:backgroundTint="#B6EFF6"
            android:gravity="center"
            android:padding="18dp"
            android:text="Salva"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
