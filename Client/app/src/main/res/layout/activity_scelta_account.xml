<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="794dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-35dp"
            android:layout_gravity="left"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo_text" />

        <TextView
            android:id="@+id/text_entrata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Cosa vuoi fare?"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/button_vendi"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_container"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <!-- <ImageView
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_vendi" />
-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendi"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_compra"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_container"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <!--
            <ImageView
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="40dp"
                android:background="@android:color/transparent"/>
-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compra"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_completo"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_container"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">
            <!--
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="5dp"

                            android:background="@android:color/transparent"/>
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendi e Compra"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>